// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid()) @map("_id")
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid()) @map("_id")
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid()) @map("_id")
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  Post          Post[]
  Comment       Comment[]
  QlakeAnswer   QlakeAnswer[]
  Qlake         Qlake[]
}

model VerificationToken {
  identifier String   @id @map("_id")
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id    String  @id @default(cuid()) @map("_id")
  slug  String  @unique
  title String
  img   String?
  Posts Post[]
}

model Post {
  id        String    @id @default(cuid()) @map("_id")
  createdAt DateTime  @default(now())
  slug      String    @unique
  title     String
  desc      String
  img       String?
  views     Int       @default(0)
  catSlug   String
  cat       Category  @relation(fields: [catSlug], references: [slug])
  userEmail String
  user      User      @relation(fields: [userEmail], references: [email])
  comments  Comment[]
}

model Qlake {
  id        String    @id @default(cuid()) @map("_id")
  createdAt DateTime  @default(now())
  question  String
  desc      String
  tags      String
  views     Int       @default(0)
  userEmail String
  user      User      @relation(fields: [userEmail], references: [email])
  answers   QlakeAnswer[]
}

model QlakeAnswer {
  id            String   @id @default(cuid()) @map("_id")
  createdAt     DateTime @default(now())
  answer        String
  userEmail     String
  user          User     @relation(fields: [userEmail], references: [email])
  questionId    String
  question      Qlake    @relation(fields: [questionId], references: [id])
}


model Classroom {
  id        String    @id @default(cuid()) @map("_id")
  title     String
  desc      String
  grade     String
  subject   String
  teacher   String
  link      String?
}

model Quizy {
  id        String    @id @default(cuid()) @map("_id")
  title     String
  grade     String
  subject   String
  quiz      Json?
}

model Chatbits {
  id            String    @id @default(cuid()) @map("_id")
  eng_p         String
  phrase        String
  note          String
  category      String
  situation     String
  language      String
}

model Comment {
  id        String   @id @default(cuid()) @map("_id")
  createdAt DateTime @default(now())
  desc      String
  userEmail String
  user      User     @relation(fields: [userEmail], references: [email])
  postSlug  String
  post      Post     @relation(fields: [postSlug], references: [slug])
}

