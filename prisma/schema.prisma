// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                Int      @id @default(autoincrement())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String    @default("pass")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt @default(now())
  accounts      Account[]
  sessions      Session[]
  Post          Post[]
  Comment       Comment[]
  QlakeAnswer   QlakeAnswer[]
  Qlake         Qlake[]
}

model VerificationToken {
  identifier Int      @id @default(autoincrement())
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id    Int     @id @default(autoincrement())
  slug  String  @unique
  title String
  img   String?
  Posts Post[]
}

model Post {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  slug      String    @unique
  title     String
  desc      String
  img       String?
  views     Int       @default(0)
  catSlug   String
  cat       Category  @relation(fields: [catSlug], references: [slug])
  userEmail String
  user      User      @relation(fields: [userEmail], references: [email])
  comments  Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  desc      String
  userEmail String
  user      User     @relation(fields: [userEmail], references: [email])
  postSlug  String
  post      Post     @relation(fields: [postSlug], references: [slug])
}

model Qlake {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  question  String
  desc      String
  tags      String
  views     Int       @default(0)
  userEmail String
  user      User      @relation(fields: [userEmail], references: [email])
  answers   QlakeAnswer[]
}

model QlakeAnswer {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  answer        String
  userEmail     String
  user          User     @relation(fields: [userEmail], references: [email])
  questionId    Int
  question      Qlake    @relation(fields: [questionId], references: [id])
}


model Classroom {
  id        Int      @id @default(autoincrement())
  title     String
  desc      String
  grade     String
  subject   String
  teacher   String
  link      String?
}

model Quizy {
  id        Int      @id @default(autoincrement())
  title     String
  grade     String
  subject   String
  quiz      Json?
  note      String   @default("note")
}

model Flips {
  id        Int      @id @default(autoincrement())
  front     String
  back      String
  lesson    String
  type      String
}

model Chatbits {
  id            Int      @id @default(autoincrement())
  eng_p         String
  sin_p         String
  phrase        String
  situation     String   @default("any") 
  note          String   @default("none")
  formality     String   @default("Polite Informal")
  pronounce     String   @default("pronounce")
  language      String    
}

model Grammars {
  id            Int      @id @default(autoincrement())
  sin_p         String
  phrase        String
  formality     String   @default("formality")
  type          String   @default("type")
  tense         String   @default("tense")
  placement     String   @default("placement")
  usage         String   @default("usage")
  note          String
  pronounce     String   @default("pronounce")
  example       String   
  situation     String
  language      String
}

model Dictionary {
  id            Int      @id @default(autoincrement())
  word          String
  sin_w         String
  eng_w         String   @default("engword") 
  note          String   @default("note") 
  category      String
  language      String
  pronounce     String   @default("pronounce")
}

model Cheats {
  id            Int      @id @default(autoincrement())
  subject       String
  category      String
  title         String
  desc          String
}

model Faq {
  id            Int      @id @default(autoincrement())
  title         String
  desc          String
}

model Cloudy {
  id          Int      @id @default(autoincrement())
  doc         String
  link        String?
  uploadedAt  DateTime  @default(now())
}

model News {
  id          Int      @id @default(autoincrement())
  news        String
  desc        String
  img         String?
  link        String?
  category    String
  createdAt  DateTime  @default(now())
}


